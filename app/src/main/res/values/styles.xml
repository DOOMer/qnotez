<resources>

    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/secondaryDarkColor</item>
        <item name="colorAccent">@color/primaryDarkColor</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

        <!-- stylize search view -->
        <item name="searchBackgroundColor">@color/search_background_light</item>
    </style>

    <!-- Dark application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_primaryColor</item>
        <item name="colorPrimaryDark">@color/dark_primaryDarkColor</item>
        <item name="colorAccent">@color/dark_primaryTextColor</item>

        <item name="android:textColorSecondary">@color/dark_secondaryColor</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

        <!-- stylize search view -->
        <item name="searchBackgroundColor">@color/search_background_dark</item>
    </style>



    <style name="AppThemeLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeLight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeLight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
